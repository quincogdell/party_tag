<div class="nav second">
  <div id="javascript-info" class="hidden" data-eventid=<%=@event.id%> data-hash-tags=<%= @event.hash_tags.first.tag_name %>>0</div>
  <h2><%= @event.title %></h2>
  <ul>
    <li><strong>At:</strong> <%= @event.location %></li>
    <li><strong>On:</strong> <%= "#{@event.date}" %></li>
    <li><strong>tracked tags:</strong>
    <span id="tags"><%= @event.hash_tags.map  { |hash| "#{hash.tag_name}"}.join(", ") %></span></li>
    <li><%= link_to "edit", "/events/#{@event.id}/edit" %></li>
  </ul>
</div>
<div class="event-items">
  <div id="tabs">
    <ul>
    <a href="#tabs-1"><li>Instagram</li></a>
    <a href="#tabs-2"><li>Tweet</li></a>
    </ul>
    <div id="tabs-1">


    </div>

    <div id="tabs-2">


    </div>

  </div>
</div>
<div class="no-books">
  <div class="event-info">
    <div class="scrapbooks">
      <h2>Scrapbooks for this event</h2>
      <% @event.scrapbooks.each do |book| %>
      <%= link_to book.name, "/scrapbooks/#{book.id}" %>
      <% end%>
    </div>
  </div>
  <div id="canvas">
    Drag an element here to begin a new page
  </div>
  <%= javascript "events.js" %>
</div>

