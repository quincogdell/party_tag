<div class="event-items">
  text
</div>
<div class="event-info">
  <h1><%= @event.title %></h1><br>
  At: <%= @event.location %><br>
  On: <%= "#{@event.date}" %><br>
  tracked tags:
  <%= @event.hash_tags.map  { |hash| "##{hash.tag_name}"}.join(", ") %><br>
  <%= link_to "edit", "/events/#{@event.id}/edit" %><br>
</div>
<div class="scrapbooks no-books">
  <h2>Scrapbooks for this event</h2>
  <% @event.scrapbooks.each do |book| %>
    <%= link_to book.name, "/scrapbooks/#{book.id}" %>
  <% end%>
</div>

<div class="canvas no-books">
  text
</div>
