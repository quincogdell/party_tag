<!DOCTYPE html>
<html>
<head>
  <title>SecondProject</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
  <div class="nav">
    <% if current_user %>
    <h2><%= current_user.name %></h2>
    <ul>
      <li><%= link_to "Create new event", "/events/new" %></li>

      <li><%= link_to "My events", "/events" %></li>
    </ul>
    <% else %>
    <%= link_to "Log In", "/login" %>
    <% end %>
  </div>

<%= yield %>

</body>
</html>
